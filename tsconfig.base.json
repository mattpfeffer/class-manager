{
    "compilerOptions": {
        "target": "es2022",
        "rootDir": "src",
        "resolveJsonModule": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "isolatedModules": false,
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
